<h1>Список пользователей</h1>

<table>
  <tr>
    <th>Имя</th>
    <th>Адресс</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><h4><%= user.name %></h4></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Просмотреть', user %></td>
    <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, confirm: 'Вы уверены?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

